<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." name="Intro" default="build">

	<!-- Definitions of the properties we used during the rest of this script. -->

	<property file="version.properties" />
	<property file="application.properties" />

	<property name="build.dir" value="${basedir}/build" />
	<property name="build.classes.dir" value="${build.dir}/classes" />
	<property name="src.dir" value="${basedir}/src" />
	<property name="etc.dir" value="${basedir}/etc" />
	<property name="lib.dir" value="${basedir}/lib" />
	<property name="main.class" value="ee.ut.math.tvt.phoenix.Intro" />
	
	
	<!-- Classpaths -->
	<path id="POS.classpath">
		<pathelement location="${build.classes.dir}"/>
		<!-- configuration -->
		<pathelement location="${etc.dir}"/>

		<fileset dir="${lib.dir}">
			<include name="*.jar"/>
		</fileset>
	</path>
	
	<!-- Build targets -->
		
	<target name="build" description="Build the system">
			<mkdir dir="${build.dir}" />
			<mkdir dir="${build.classes.dir}" />
			<javac 
				srcdir="${src.dir}" 
				destdir="${build.classes.dir}" 
				classpathref="POS.classpath" 
				includeantruntime="false" 
				debug="true"
				debuglevel="lines,vars,source"
				encoding="utf-8"
				compiler="modern"
				target="1.7"
				source="1.7">
			</javac>
		</target>
	
	<target name="clean" description="Clean up build system results">
			<delete dir="${build.dir}"/>
		</target>
	
	<target name="run" depends="build" description="Run the template application">
			<java classname="ee.ut.math.tvt.phoenix.Intro" classpathref="POS.classpath" fork="yes" />
		</target>

		<target name="dist" description="Makes a jar file" depends="build">
				<jar destfile="${build.dir}/jar/phoenix.jar" basedir="${build.classes.dir}">
					<fileset dir="${basedir}">
									<include name="*.properties" />
									<include name="etc/*" />
					
								</fileset>
					<manifest>
									<attribute name="Main-Class" value="${main.class}" />
									<attribute name="Class-Path" value="./POS"/>
								</manifest>
				</jar>
			
<!-- This changes the revision number in our properties file -->
		<propertyfile
		    file="version.properties"
		    comment="Makes a change to the current version nr">
		  <entry  key="build.revision.number" type = "int" default="" operation="+" value="1"/>
		</propertyfile>
	</target>

	<target name="jrun" depends="dist" description="Run the compiled .jar file">
			<java jar="${build.dir}/jar/phoenix.jar" fork="true"/>
		</target>

	
</project>
